<% if user_signed_in? %>
  <h1 class="page-title text-center">YOUR POLLS</h1>
<% else %>
  <h1 class="page-title text-center">ALL POLLS</h1>
<% end %>

<% if @polls.any? %>
  <%= render @polls %>
<% else %>
  <div class="jumbotron text-center">
    YOU HAVE NOT CREATED ANY POLLS YET CREATE ONE <%= link_to "HERE", new_poll_path %>!
    or see everybody else's <%= link_to 'here', polls_path %>
  </div>
<% end %>
<%= will_paginate @polls %>

