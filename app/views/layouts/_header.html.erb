<div class="site-nav-wrap">
  <section id="site-nav" class="site-header text-center">
    <div class="container">
      <div class="row">
        <p><%= link_to "URPOLLS", root_url, class: "site-title" %></p>
        <p class="site-description">See What Others Are Thinking</p>
      </div>
    </div>
  </section>
  <section class="site-header-bottom">
    <div class="container">
      <nav class="navigation-bar text-center ">
        <ul id="primary-menu" class="nav justify-content-center">
          <li id="nav-home" class="menu-item">
            <%= button_to "Home", root_url, method: :get, class: "btn btn-solid rounded #{active_class?(root_url)}" %>
          </li>
          <li id="nav-polls" class="menu-item">
            <%= button_to "Polls", polls_path, method: :get, class: "btn btn-solid rounded #{active_class?(polls_path)}" %>
          </li>
          <% if user_signed_in? %>
            <li id="nav-account" class="menu-item">
              <%= button_to "My account", user_path(current_user.id), method: :get,class: "btn btn-solid rounded #{active_class?(user_path(current_user.id))}" %>
            </li>
            <li id="nav-signout" class="menu-item">
              <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-solid rounded" %>
            </li>
          <% else %>
            <li id="nav-signin" class="menu-item">
              <%= button_to "Sign in", new_user_session_path, method: :get, class: "btn btn-solid rounded #{active_class?(new_user_session_path)}" %>
            </li>
            <li id="nav-signup" class="menu-item">
              <%= button_to "Sign up", new_user_registration_path, method: :get, class: "btn btn-solid rounded #{active_class?(new_user_registration_path)}" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </section>
</div>
